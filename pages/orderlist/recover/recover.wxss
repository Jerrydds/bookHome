page {
  background: rgb(242,242,247)
}

.scroll{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.wrapper {
  padding: 20rpx 20rpx 0
}

.order {
  margin-bottom: 20rpx;
  padding: 0 15rpx 0;
  border-radius: 10rpx;
  background: #fff;
}

.order .title {
  display: flex;
  justify-content: space-between;  
  padding-left: 15rpx;
  position: relative;
  height: 96rpx;
  line-height: 96rpx;
  box-sizing: border-box;
  border-bottom: 1px dashed #ccc;
  font-size: 32rpx;
  color: #111111;
}

.order .title .circle {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  background: #f2f2f7;
  border-radius: 50%;
  bottom: -15rpx;
}

.order .title .left {
  left: -35rpx;
}

.order .title .right {
  right: -35rpx;
}

.order .title .order-num {
  display: flex;
  align-items: center;
}

.order .title .order-num image {
  margin-right: 10rpx;
  width: 36rpx;
  height: 36rpx;
}

.order .title .status {
  margin-right: 15rpx;
  font-weight: bold;
}

.book-list {
  display: flex;
  align-items: center;
  padding: 20rpx 15rpx;
  border-bottom: 1rpx dashed #c5c5c5;
}

.book-list .image {
  margin-right: 16rpx;
  height: 150rpx;
  width: 150rpx;
}

.book-list text {
  font-size: 28rpx;
  color: #999;
}

.squre{
  margin-right: 10rpx;
  height: 6rpx;
  width: 6rpx;
  background: #999;
}

.order .foot {
  padding: 0 15rpx;
  display: flex;
  justify-content: space-between;
  height: 72rpx;
  line-height: 72rpx;
}

.order .foot .time{
  font-size: 28rpx;
  color: #999;
}

.order .foot .price{
  font-size: 32rpx;
  color: #F14848;
}

.order .foot .price .icon {
  font-size: 24rpx;
}

.no-list {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no-list image{
  width: 330rpx;
  height: 332rpx;
  margin: 255rpx 0 30rpx;
}

.no-list text {
  font-size: 34rpx;
  color: #999;
}