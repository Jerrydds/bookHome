.container{
  background: #f2f2f7;
  position:absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0; 
}
.search{
  width: 100%;
  height: 100rpx;
  position: fixed;
  z-index: 1000;
  top: 0;
  left:0;
  background: #4971a4;
}
.sear-box{
  background:#fff;
  border-radius:8rpx;
  width:710rpx;
  height:60rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  position: absolute;
  top:20rpx;
  left: 20rpx;
}
.search-img{
  width:24rpx;
  height: 30rpx;
  position: absolute;
  left: 30rpx;
  top:17rpx;
}
.sear-input{
  display:inline-block;
  width:622rpx;
  min-height: 60rpx;
  position: absolute;
  left: 70rpx;
  top:0;
}
.list{
  margin-top: 120rpx;
  background-color:#fff;
}

.list .list-item{
  display: flex;
  padding:30rpx;
  background-color:#fff;
  margin-bottom:20rpx; 
  width: 94vw;
  margin-left:3vw; 
  border-radius:8rpx;
  box-sizing: border-box;
}

.list .list-item .item-left image{
  width: 164rpx;
  height: 220rpx;
}

.item-right {
  margin-left: 40rpx;
  position: relative;
}
.item-text .item-title{
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1; 
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.item-text .item-author{
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:3; 
  color: #999;
  font-size: 26rpx;
}
.item-right .price-text{
  position: absolute;
  bottom: 3rpx;
  font-size: 26rpx;
  color:#999;
}
.price-text .price-money{
  font-size: 26rpx;
  color: #f14848;
  margin-left: 12rpx;
}
.empty{
  width: 100%;
  height: 100%;
  text-align: center;
  color: #737373;
  font-size:34rpx;
}
.empty image{
  width: 330rpx;
  height: 330rpx;
  margin: 100rpx 0 30rpx;
}