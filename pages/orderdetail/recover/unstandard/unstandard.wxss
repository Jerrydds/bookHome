page {
  background: rgb(242,242,247)
}

.unstandard-wrapper {
  padding: 20rpx 20rpx 0
}

.block {
  margin-bottom: 10rpx;
  padding: 40rpx 90rpx 10rpx;
  border-radius: 10rpx;
  background: #fff;
}

.desc {
  text-align: center;
  line-height: 40rpx;
  font-size: 30rpx;
  color: #111;
}

.book-list {
  margin-top: 50rpx;
}

.book {
  margin-bottom: 30rpx;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
  border: 1px solid #C5C5C5;
  border-radius: 10px;
}

.book .book-cover {
  margin-right: 20rpx;
  width: 104rpx;
  flex: 0 0 104rpx;
  height: 140rpx;
}

.book .detail .name {
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #111;
}

.book .detail .author {
  font-size: 24rpx;
  color: #999;
}

.block .text {
  display: block;
  font-size: 28rpx;
  color: #999;
}

.mb_10 {
  margin-bottom: 10rpx;
}

.mb_20 {
  margin-bottom: 20rpx;
}

.mb_30 {
  margin-bottom: 30rpx;
}

.block .red {
  color: red;
}