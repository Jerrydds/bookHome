.scanbook {
  padding-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.scanbook .example {
  margin-bottom: 30rpx;
  width: 233rpx;
  height: 181rpx;
}

.scanbook .desc {
  margin-bottom: 10rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  color: #999;
}

.scanbook .scan-btn {
  margin-top: 40rpx;
  margin-bottom: 50rpx;
  width: 320rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #4971a4;
  box-shadow: 0 0 11rpx 0 rgba(73, 113, 164, 0.54);
  border-radius: 18rpx;
  font-size: 36rpx;
  color: #fff;
  font-weight: 500;
}

.scanbook .scan-btn .scan-icon {
  height: 50rpx;
  width: 50rpx;
  margin-right: 15rpx;
}

.scanbook .ISBN {
  padding-left: 20rpx;
  width: 510rpx;
  height: 60rpx;
  box-sizing: border-box;
  border: 2rpx solid #c5c5c5;
  border-radius: 5rpx;
  font-size: 26rpx;
  color: #111;
}

.scanbook .why {
  box-sizing: border-box;
  margin-top: 70rpx;
  padding: 40rpx 30rpx;
  width: 581rpx;
  border: 2rpx solid #cee3ff;
  border-radius: 10rpx;
  text-align: center;
}

.scanbook .why .item {
  margin-bottom: 40rpx;
}

.scanbook .why .item .title {
  padding: 0 10rpx;
  display: inline-block;
  margin-bottom: 20rpx;
  font-weight: bold;
  background: #cee3ff;
  color: #111;
  font-size: 28rpx;
  line-height: 36rpx;
}

.scanbook .why .item .text {
  text-align: left;
  font-size: 26rpx;
  color: #111;
}

.shopcart {
  display: flex;
  position: fixed;
  left: 50%;
  margin-left: -222rpx;
  width: 444rpx;
  height: 90rpx;
  box-sizing: border-box;
  border-radius: 18rpx;
  border: 1rpx solid #4971a4;
  overflow: hidden;
  bottom: 50rpx;
  z-index: 10;
}

.shopcart .left {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  color: #fa5b5b;
  background: #fff;
}

.shopcart .left .cart-icon {
  margin-right: 5rpx;
  width: 43rpx;
  height: 40rpx;
}

.shopcart .left .text {
  line-height: 26rpx;
  font-size: 26rpx;
}

.shopcart .right {
  line-height: 90rpx;
  flex: 1;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  background: #4971a4;
}

.bookmark-scroll {
  padding-top: 52rpx;
  white-space: nowrap;
  display: flex;
  overflow: hidden;
}

.bookmark-item {
  display: inline-block;
  padding-left: 80rpx;
  text-align: center;
}

.bookmark-item image {
  width: 208rpx;
  height: 279rpx;
}

.bookmark-item .item-text {
  width: 188rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  white-space: nowrap;
  font-size: 30rpx;
  color: #333;
  line-height: 30rpx;
  padding-top: 15rpx;
}

.continue {
  margin-top: 50rpx;
  margin-left: 40rpx;
}

.border-left {
  border-left: 5rpx solid #4971a4;
  font-size: 30rpx;
  color: #666;
  padding-left: 20rpx;
  letter-spacing: 0;
  line-height: 30rpx;
}
