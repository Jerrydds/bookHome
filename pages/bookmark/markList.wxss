.img-list{
  width: 94.67%;
  background: #FFFFFF;
  box-shadow: 0 2px 10px 0 rgba(213,213,213,0.50);
  border-radius: 10px;
  height: 368rpx;
  margin: 2rpx auto;
  padding:46rpx 0; 
  box-sizing: border-box;
}
.bottom-box{
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
}
.book-title{
  width: 100%;
  height: 100rpx;
  background: #fff;
  font-size: 32rpx;
  color: #333333;
  letter-spacing: 0;
  line-height: 100rpx;
  box-sizing: border-box;
  padding: 0 40rpx;
  padding-right:60rpx;
  position: relative;
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不换行*/
  text-overflow:ellipsis;/*超出部分文字以...显示*/
}
.rotImg{
  width:44rpx;
  height: 44rpx;
  position: absolute;
  right: 20rpx;
  top: 28rpx;
}
.trans {
  transform: rotate(90deg);
}
.empty{
  text-align: center;
  font-size: 34rpx;
